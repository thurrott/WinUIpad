<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:local="using:WinUIpad4">

    <local:FileNameConverter x:Key="ConvertFileName" />
    <local:BoolToStringConverter x:Key="ConvertBoolToString" />

    <Style TargetType="TextBox">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="Opacity" Value="1" />
    </Style>

    <StaticResource x:Key="TabViewBackground" ResourceKey="LayerOnMicaBaseAltFillColorTransparent" />
    <StaticResource x:Key="TabViewItemHeaderBackgroundSelected" ResourceKey="ControlFillColorTransparentBrush" />

</ResourceDictionary>